extends partials/layout.pug

block content
    h1.title Contact Me
    if sent
        .alert.alert-success.alert-dismissible.fade.show Message Sent Successfully
            button(type="button" class="close" data-dismiss="alert" aria-label="Close")
                span(aria-hidden="true") &times;
    form(action='/contact' method='POST')
        .form-group
            label(for='name') Name
            input#name.form-control(type='text' name='name' placeholder='Name')
        .form-group
            label(for='email') Email
            input#email.form-control(type='email' name='email' placeholder='Email' value=email)
        .form-group
            label(for='message') Message
            textarea#message.form-control(placeholder='Message' name='body' cols='30' rows='10')
        button.btn.btn-primary(type='submit') Send
